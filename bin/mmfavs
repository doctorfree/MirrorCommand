#!/bin/bash

MNT_PT="/mnt/transcend/Pictures"
[ -d ${MNT_PT} ] || {
    MNT_PT="/u/pictures"
    [ -d ${MNT_PT} ] || {
        echo "Cannot locate mount point for images"
        exit 1
    }
}
MAG="${MNT_PT}/MagicMirror"
TOP="/mnt/transcend/Pictures/Wallhaven"
ART=${TOP}/Artists
PHO=${TOP}/Photographers
MOD=${TOP}/Models
PLA=${MOD}/Playboy
PEN=${MOD}/Penthouse

FAVS="Ali_Rose Alisa_I Carisha Corinna David_Dubnitskiy Dmitry_Borisov Heidi_Romanova Helly_von_Valentine Igor_Viushkin Jenya Li_Moon Martina_Mink Nata_Lee Natalia_Andreeva Niemira Priscilla_Huggins Sakimichan Stefan_Soell Tuigirl"

for orient in landscape portrait
do
  [ -d ${MAG}/${orient} ] || continue
  cd ${MAG}/${orient}

  for i in $FAVS
  do
    echo "Creating/updating $i MagicMirror background pics"
    [ -d $TOP/$i ] && {
        echo "Found $i in $TOP"
        [ -d $i ] || mkdir $i
        if [ "${orient}" == "landscape" ]
        then
          updtop -l "$i"
        else
          updtop "$i"
        fi
        continue
    }
    [ -d $ART/$i ] && {
        echo "Found $i in $ART"
        [ -d Artists/$i ] || mkdir Artists/$i
        if [ "${orient}" == "landscape" ]
        then
          updartist -l "$i"
        else
          updartist "$i"
        fi
        continue
    }
    [ -d $MOD/$i ] && {
        echo "Found $i in $MOD"
        [ -d Models/$i ] || mkdir Models/$i
        if [ "${orient}" == "landscape" ]
        then
          updmodel -l "$i"
        else
          updmodel "$i"
        fi
        continue
    }
    [ -d $PHO/$i ] && {
        echo "Found $i in $PHO"
        [ -d Photographers/$i ] || mkdir Photographers/$i
        if [ "${orient}" == "landscape" ]
        then
          updphotographer -l "$i"
        else
          updphotographer "$i"
        fi
        continue
    }
    [ -d $PLA/$i ] && {
        echo "Found $i in $PLA"
        [ -d Playboy/$i ] || mkdir Playboy/$i
        if [ "${orient}" == "landscape" ]
        then
          updplayboy -l "$i"
        else
          updplayboy "$i"
        fi
        continue
    }
  done
done
