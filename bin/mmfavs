#!/bin/bash

MAG="/mnt/transcend/Pictures/MagicMirror"
TOP="/mnt/transcend/Pictures/Wallhaven"
ART=${TOP}/Artists
PHO=${TOP}/Photographers
MOD=${TOP}/Models
PLA=${MOD}/Playboy
PEN=${MOD}/Penthouse

FAVS="Ali_Rose Alisa_I Carisha Corinna David_Dubnitskiy Dmitry_Borisov Heidi_Romanova Helly_von_Valentine Igor_Viushkin Jenya Li_Moon Martina_Mink Nata_Lee Natalia_Andreeva Niemira Sakimichan Stefan_Soell Tuigirl"

cd $MAG

for i in $FAVS
do
    echo "Creating/updating $i MagicMirror background pics"
    [ -d $TOP/$i ] && {
        echo "Found $i in $TOP"
        [ -d $i ] || mkdir $i
        updtoplinks $i
        continue
    }
    [ -d $ART/$i ] && {
        echo "Found $i in $ART"
        [ -d Artists/$i ] || mkdir Artists/$i
        updartistlinks $i
        continue
    }
    [ -d $MOD/$i ] && {
        echo "Found $i in $MOD"
        [ -d Models/$i ] || mkdir Models/$i
        updmodellinks $i
        continue
    }
    [ -d $PHO/$i ] && {
        echo "Found $i in $PHO"
        [ -d Photographers/$i ] || mkdir Photographers/$i
        updphotographerlinks $i
        continue
    }
    [ -d $PLA/$i ] && {
        echo "Found $i in $PLA"
        [ -d Playboy/$i ] || mkdir Playboy/$i
        updplayboylinks $i
        continue
    }
done
