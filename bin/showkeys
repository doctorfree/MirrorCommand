#!/bin/bash

MMCONFDIR="/usr/local/MirrorCommandLine/config"
NOCONFDIR="/usr/local/MirrorCommandLine/config-notelegram"
BINDIR="/usr/local/MirrorCommandLine/bin"
QUIET=
[ "$1" == "-q" ] && QUIET=1

showconfkeys() {
    cd "${CONFDIR}"
    [ "${QUIET}" ] || echo "Showing keys in $CONFDIR"
    ${BINDIR}/show_dist_keys
    for i in Artists JAV Models Photos Photographers Templates YouTube
    do
        [ -d $i ] && {
            cd $i
            [ "${QUIET}" ] || echo "Showing keys in $i"
            ${BINDIR}/show_dist_keys
            cd ..
        }
    done
}

MMHOME="$HOME/MagicMirror"
[ -d ${MMHOME}/config ] || {
    MMHOME=
    for homedir in /home/*
    do
        [ "${homedir}" == "/home/*" ] && continue
        [ -d ${homedir}/MagicMirror/config ] && {
            MMHOME="${homedir}/MagicMirror"
            break
        }
    done
}
[ "${MMHOME}" ] && {
    CONFDIR=${MMHOME}/config
    showconfkeys
    CONFDIR=${MMHOME}/config-notelegram
    showconfkeys
}

CONFDIR=${MMCONFDIR}
showconfkeys
CONFDIR=${NOCONFDIR}
showconfkeys

cd "${BINDIR}"
[ "${QUIET}" ] || echo "Showing keys in $BINDIR"
${BINDIR}/show_dist_bin_keys
