#!/bin/bash

ART="/mnt/transcend/Pictures/MagicMirror/Artists"

[ -d ${ART} ] || {
    echo "$ART does not exist or is not a directory. Exiting."
    exit 1
}
cd ${ART}
for i in ../../Wallhaven/Artists/*
do
    [ -d "$i" ] || continue
    j=`basename "$i"`
    [ -d "$j" ] && {
        echo "$j exists. skipping."
        continue
    }
    echo "Creating $j"
    mkdir $j
    updartistlinks $j
done
