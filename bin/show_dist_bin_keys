#!/bin/bash
#
# Add your keys to /usr/local/MirrorCommandLine/etc/mirrorkeys
. /usr/local/MirrorCommandLine/etc/mirrorkeys

binfiles="chktemp gethue getquote mirror mmscene repfromfile \
          send_sms mm mmapiactions mmgetb mmsetb vncview"

commands=/tmp/mk_sed$$

rm -f ${commands}
touch ${commands}
chmod 600 ${commands}

for key in "${!keys[@]}"; do
  val="${keys[$key]}"
  dum="${dumb[$key]}"
  [ "${val}" ] && {
    echo "s/${dum}/${val}/" >> ${commands}
  }
done

[ -s ${commands} ] && {
  for bin in ${binfiles}
  do
    [ -f ${bin} ] && sed -i -f ${commands} ${bin}
  done
}
rm -f ${commands}
