#!/bin/bash
#
# Add your keys to /usr/local/MagicMirror/etc/mirrorkeys
. /usr/local/MagicMirror/etc/mirrorkeys

commands=/tmp/mk_sed$$

rm -f ${commands}
touch ${commands}
chmod 600 ${commands}

for key in "${!keys[@]}"; do
  val="${keys[$key]}"
  dum="${dumb[$key]}"
  [ "${val}" ] && {
    echo "s/${dum}/${val}/" >> ${commands}
  }
done

[ -s ${commands} ] && {
  for bin in chktemp gethue getquote mirror mmscene repfromfile send_sms
  do
    sed -i -f ${commands} ${bin}
  done
}
rm -f ${commands}
