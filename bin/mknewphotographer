#!/bin/bash

TYPE="Photographers"
UPDSCRIPT="updphotographer"

TYPEDIR="/mnt/transcend/Pictures/MagicMirror/${TYPE}"
PICDIR="${HOME}/Pictures/${TYPE}"

[ -d ${TYPEDIR} ] || {
    echo "$TYPEDIR does not exist or is not a directory. Exiting."
    exit 1
}
cd ${TYPEDIR}
for i in $*
do
    [ -d $i ] && {
        echo "$i exists. skipping."
        continue
    }
    mkdir $i
    ${UPDSCRIPT} $i
done
[ -d ${PICDIR} ] || mkdir -p ${PICDIR}
cd ${PICDIR}
ln -s ${TYPEDIR}/$1 .
