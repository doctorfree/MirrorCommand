#!/bin/bash

ART="/mnt/transcend/Pictures/MagicMirror/Photographers"

[ -d ${ART} ] || {
    echo "$ART does not exist or is not a directory. Exiting."
    exit 1
}
cd ${ART}
for i in $*
do
    [ -d $i ] && {
        echo "$i exists. skipping."
        continue
    }
    mkdir $i
    updphotographerlinks $i
done
