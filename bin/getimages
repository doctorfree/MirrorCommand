#!/bin/bash

IDS="10Dnj1YiWQeeGryVldRW2tyBGyFNidKFY \
     10DyV09WNLMcf5PET0gxwTtaaWzZnm7Mv \
     10GDkDVOxZtYKZtaKIn6C-xe4pab4R4cT \
     10GbIF2-D3GOuWBTikHF0fatxUCqfytch \
     10Hufi-VPrd2iR3uwUvQV3rCCDZzwekwg"

HERE=`pwd`
NUM_IDS=`echo ${IDS} | wc -w`
printf "\nDownloading and extracting ${NUM_IDS} image archives "
printf "will consume approximately 375M of disk space in "
printf "${HERE}\n\n"

while true
do
  read -p "Do you wish to continue ? ('Y'/'N'): " yn
  case $yn in
      [Yy]*)
          DOWNLOAD=1
          break
          ;;
      [Nn]*)
          DOWNLOAD=
          break
          ;;
      * )
          echo "Please answer yes or no."
          ;;
  esac
done

[ "${DOWNLOAD}" ] && {
  gdinst=`type -p gdown`

  [ "${gdinst}" ] || pip install gdown > /dev/null

  i=1
  for ID in ${IDS}
  do
    printf "\nDownloading and extracting ${i}/${NUM_IDS} image archives ..."
    gdown -O - --id ${ID} --quiet | tar xzf -
    printf " Done."
    ((i++))
  done
  printf "\n"
}

