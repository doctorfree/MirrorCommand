#!/bin/bash

ART="/mnt/transcend/Pictures/MagicMirror/Playboy"

[ -d ${ART} ] || {
    echo "$ART does not exist or is not a directory. Exiting."
    exit 1
}
cd ${ART}
rm -f counts.txt
touch counts.txt
for i in *
do
    [ -d $i ] || continue
    count=`ls -1 $i | wc -l`
    echo "$count $i" >> counts.txt
done
