#!/bin/bash

IDS="16_xYv1nXTFeybPTFjyQRbrAs5N8A8TBA \
     1RCYUgVMXt3eg73x5mp1Lr_NNAgR4m0un \
     1F2eENlQmfGKHu8gt2z0f81fcK4rjl9hU \
     1nNHpFuRN1z-4rnvRfzec_0UGyFU4mH4- \
     1RefiBSfuJW7_fbwas-wris4NHptLpTL7 \
     1C4eBeB2Xlard2aQThcQssjaKfqmhY8c4 \
     1PzIYcddO8qcExYydI99QtFxItR_2NMkS"

# Placeholder, replace with landscape archive IDs
LAND_IDS="1DNig6jcdAtTF_k4VjGGJHG0JdCX2RAcE \
          1p0jCyEHBd-mddlAHHmuJrRYMYlvQ7N8R \
          14-uLHkSsSt__r677jAiRuWg6978ynrsu \
          1VpE1zSC5ttZ3YtdsjVEdwQ5UXbkfY30N \
          13W7morT5eYfpjIaSpjy0Cc_3DcErHwLm \
          1zAvsWq8rX79wxo01EqQDoj6Xefot_3HD \
          1r0JfApi8AB9cbkKml5CZeAIxA1uVh2Bv"

PICDIR="pics-portrait"
SPACE="500M"

ASK=1
while getopts "il" flag; do
    case $flag in
        i)
            ASK=
            ;;
        l)
            IDS=${LAND_IDS}
            PICDIR="pics-landscape"
            SPACE="500M"
            ;;
    esac
done

HERE=`pwd`
NUM_IDS=`echo ${IDS} | wc -w`
printf "\nDownloading and extracting ${NUM_IDS} photographer archives "
printf "will consume approximately ${SPACE} of disk space in "
printf "${HERE}\n\n"

if [ "${ASK}" ]
then
  while true
  do
    read -p "Do you wish to continue ? ('Y'/'N'): " yn
    case $yn in
      [Yy]*)
          DOWNLOAD=1
          break
          ;;
      [Nn]*)
          DOWNLOAD=
          break
          ;;
      * )
          echo "Please answer yes or no."
          ;;
    esac
  done
else
  DOWNLOAD=1
fi

[ "${DOWNLOAD}" ] && {
  type -p gdown > /dev/null || pip install gdown > /dev/null

  i=1
  for ID in ${IDS}
  do
    printf "\nDownloading and extracting ${i}/${NUM_IDS} photographer archives ..."
    gdown -O - --id ${ID} --quiet | tar xzf -
    printf " Done."
    ((i++))
  done
  printf "\n"
  MMHOME=${HOME}/MagicMirror
  [ -d ${MMHOME}/config ] || {
      MMHOME=
      for homedir in /usr/local /home/*
      do
          [ "${homedir}" == "/home/*" ] && continue
          [ -d ${homedir}/MagicMirror/config ] && {
              MMHOME="${homedir}/MagicMirror"
              break
          }
      done
  }
  [ "${MMHOME}" ] && {
      MM="/usr/local/MirrorCommand"
      USER=$(stat -c '%U' ${MMHOME}/config)
      GROUP=$(stat -c '%G' ${MMHOME}/config)
      sudo chown -R ${USER}:${GROUP} ${MM}/${PICDIR}/Photographers
      find ${MM}/${PICDIR}/Photographers -type d -print0 | xargs -0 chmod 755
      find ${MM}/${PICDIR}/Photographers -type f -print0 | xargs -0 chmod 644
  }
}

