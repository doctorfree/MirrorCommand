#!/bin/bash

IDS="1zBzxKqwjdMKNRx9MfKdUYpsgmY9wzOw_ \
     10-NJ_-2Ald_avFzy5xrGJLAEOni5WVHx \
     104w6cwhnpLAKSL-FCG6IT6zai0yTVbhq \
     102mdUi-hiaRn1npWRWqjsZrJhjiMNoLG \
     10C9WRg_vzZa8X8VRfSsFtyzSvO58oulW"

HERE=`pwd`
NUM_IDS=`echo ${IDS} | wc -w`
printf "\nDownloading and extracting ${NUM_IDS} photographer archives "
printf "will consume approximately 500M of disk space in "
printf "${HERE}\n\n"

while true
do
  read -p "Do you wish to continue ? ('Y'/'N'): " yn
  case $yn in
      [Yy]*)
          DOWNLOAD=1
          break
          ;;
      [Nn]*)
          DOWNLOAD=
          break
          ;;
      * )
          echo "Please answer yes or no."
          ;;
  esac
done

[ "${DOWNLOAD}" ] && {
  gdinst=`type -p gdown`

  [ "${gdinst}" ] || pip install gdown > /dev/null

  i=1
  for ID in ${IDS}
  do
    printf "\nDownloading and extracting ${i}/${NUM_IDS} photographer archives ..."
    gdown -O - --id ${ID} --quiet | tar xzf -
    printf " Done."
    ((i++))
  done
  printf "\n"
}

