#!/bin/bash

MNT_PT="/mnt/transcend/Pictures"
[ -d ${MNT_PT} ] || {
    MNT_PT="/u/pictures"
    [ -d ${MNT_PT} ] || {
        echo "Cannot locate mount point for images"
        exit 1
    }
}
PMM="${MNT_PT}/MagicMirror"

for orient in landscape portrait
do
  [ -d ${PMM}/${orient}/Photographers ] || continue
  cd ${PMM}/${orient}/Photographers
  for i in ../../../Wallhaven/Photographers/*
  do
    [ -d "$i" ] || continue
    j=`basename "$i"`
    [ -d "$j" ] && {
        echo "$j exists. skipping."
        continue
    }
    echo "Creating $j"
    mkdir $j
    if [ "${orient}" == "landscape" ]
    then
      updphotographer -l $j
    else
      updphotographer $j
    fi
  done
done
