#!/bin/bash

TOP_DIR="/mnt/transcend/Pictures/MagicMirror"

[ -d ${TOP_DIR} ] || {
    echo "$TOP_DIR does not exist or is not a directory. Exiting."
    exit 1
}
cd ${TOP_DIR}

for folder in *
do
    case $folder in
        Artists | Artists-ALL | JAV | JAV-ALL | Models | Models-ALL | Photographers | Photographers-ALL | Playboy-ALL)
            continue
            ;;
        *)
            echo "Updating $folder"
            updtop "$folder"
            ;;
    esac
done
