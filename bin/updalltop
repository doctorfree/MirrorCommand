#!/bin/bash

ART_DIR="/mnt/transcend/Pictures/MagicMirror"

[ -d ${ART_DIR} ] || {
    echo "$ART_DIR does not exist or is not a directory. Exiting."
    exit 1
}
cd ${ART_DIR}
TOP="../Wallhaven"
MOD="${TOP}/Models"
ART="${TOP}/Artists"
JAV="${TOP}/JAV_Idol"
PHO="${TOP}/Photographers"
PLA="${MOD}/Playboy"
PEN="${MOD}/Penthouse"
DRO="${MOD}/Photodromm"
KIND="../KindGirls"
HER=`pwd`

isportrait() {
    port=0
    GEO=`identify "$1" | awk ' { print $(NF-6) } '`
    W=`echo $GEO | awk -F "x" ' { print $1 } '`
    # Check if width not greater than 600
    [ "$W" ] && [ $W -gt 600 ] || {
        port=1
        return $port
    }
    H=`echo $GEO | awk -F "x" ' { print $2 } '`
    # Check if height not greater than 800
    [ "$H" ] && [ $H -gt 800 ] || {
        port=1
        return $port
    }
    # Check if width less than height
    [ "$W" ] && [ "$H" ] && [ $W -lt $H ] || {
        port=1
        return $port
    }
    return $port
}

# Update any existing plain files to symlinks if possible
for folder in *
do
    [ "$folder" == "*" ] && continue
    [ "$folder" == "Unused" ] && continue
    [ -d $folder ] || continue
    cd $folder
    for img in *
    do
        [ "$img" == "*" ] && continue
        [ -L $img ] && rm -f $img
        if [ -f ../$MOD/$folder/$img ]
        then
          rm -f $img
          cp ../$MOD/$folder/$img .
        else
          if [ -f ../$KIND/$folder/$img ]
          then
            rm -f $img
            cp ../$KIND/$folder/$img .
          else
            if [ -f ../$ART/$folder/$img ]
            then
              rm -f $img
              cp ../$ART/$folder/$img .
            else
              if [ -f ../$PHO/$folder/$img ]
              then
                rm -f $img
                cp ../$PHO/$folder/$img .
              else
                if [ -f ../$PLA/$folder/$img ]
                then
                  rm -f $img
                  cp ../$PLA/$folder/$img .
                else
                  if [ -f ../$PEN/$folder/$img ]
                  then
                    rm -f $img
                    cp ../$PEN/$folder/$img .
                  else
                    if [ -f ../$DRO/$folder/$img ]
                    then
                      rm -f $img
                      cp ../$DRO/$folder/$img .
                    else
                      if [ -f ../$JAV/$folder/$img ]
                      then
                        rm -f $img
                        cp ../$JAV/$folder/$img .
                      else
                        if [ -f ../$TOP/$folder/$img ]
                        then
                          rm -f $img
                          cp ../$TOP/$folder/$img .
                        fi
                      fi
                    fi
                  fi
                fi
              fi
            fi
          fi
        fi
    done
    cd ..
done

# Identify any newly added files and create symlinks
for folder in *
do
    [ "$folder" == "*" ] && continue
    [ "$folder" == "Unused" ] && continue
    [ -d $folder ] || continue
    [ -d $MOD/$folder ] && {
        echo "Checking $MOD/$folder for newly added files"
        cd $MOD/$folder
        for img in *
        do
            [ "$img" == "*" ] && continue
            [ -L $HER/$folder/$img ] && rm -f $HER/$folder/$img
            if isportrait $img
            then
                cp ../$MOD/$folder/$img $HER/$folder/$img
            fi
        done
        cd $HER
    }
    [ -d $KIND/$folder ] && {
        echo "Checking $KIND/$folder for newly added files"
        cd $KIND/$folder
        for img in *
        do
            [ "$img" == "*" ] && continue
            [ -L $HER/$folder/$img ] && rm -f $HER/$folder/$img
            if isportrait $img
            then
                cp ../$KIND/$folder/$img $HER/$folder/$img
            fi
        done
        cd $HER
    }
    [ -d $ART/$folder ] && {
        echo "Checking $ART/$folder for newly added files"
        cd $ART/$folder
        for img in *
        do
            [ "$img" == "*" ] && continue
            [ -L $HER/$folder/$img ] && rm -f $HER/$folder/$img
            if isportrait $img
            then
                cp ../$ART/$folder/$img $HER/$folder/$img
            fi
        done
        cd $HER
    }
    [ -d $JAV/$folder ] && {
        echo "Checking $JAV/$folder for newly added files"
        cd $JAV/$folder
        for img in *
        do
            [ "$img" == "*" ] && continue
            [ -L $HER/$folder/$img ] && rm -f $HER/$folder/$img
            if isportrait $img
            then
                cp ../$JAV/$folder/$img $HER/$folder/$img
            fi
        done
        cd $HER
    }
    [ -d $PHO/$folder ] && {
        echo "Checking $PHO/$folder for newly added files"
        cd $PHO/$folder
        for img in *
        do
            [ "$img" == "*" ] && continue
            [ -L $HER/$folder/$img ] && rm -f $HER/$folder/$img
            if isportrait $img
            then
                cp ../$PHO/$folder/$img $HER/$folder/$img
            fi
        done
        cd $HER
    }
    [ -d $PLA/$folder ] && {
        echo "Checking $PLA/$folder for newly added files"
        cd $PLA/$folder
        for img in *
        do
            [ "$img" == "*" ] && continue
            [ -L $HER/$folder/$img ] && rm -f $HER/$folder/$img
            if isportrait $img
            then
                cp ../$PLA/$folder/$img $HER/$folder/$img
            fi
        done
        cd $HER
    }
    [ -d $PEN/$folder ] && {
        echo "Checking $PEN/$folder for newly added files"
        cd $PEN/$folder
        for img in *
        do
            [ "$img" == "*" ] && continue
            [ -L $HER/$folder/$img ] && rm -f $HER/$folder/$img
            if isportrait $img
            then
                cp ../$PEN/$folder/$img $HER/$folder/$img
            fi
        done
        cd $HER
    }
    [ -d $DRO/$folder ] && {
        echo "Checking $DRO/$folder for newly added files"
        cd $DRO/$folder
        for img in *
        do
            [ "$img" == "*" ] && continue
            [ -L $HER/$folder/$img ] && rm -f $HER/$folder/$img
            if isportrait $img
            then
                cp ../$DRO/$folder/$img $HER/$folder/$img
            fi
        done
        cd $HER
    }
    [ -d $TOP/$folder ] && {
        echo "Checking $TOP/$folder for newly added files"
        cd $TOP/$folder
        for img in *
        do
            [ "$img" == "*" ] && continue
            [ -L $HER/$folder/$img ] && rm -f $HER/$folder/$img
            if isportrait $img
            then
                cp ../$TOP/$folder/$img $HER/$folder/$img
            fi
        done
        cd $HER
    }
    cd $HER
done
