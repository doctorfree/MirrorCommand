#!/bin/bash

MNT_PT="/mnt/transcend/Pictures"
[ -d ${MNT_PT} ] || {
    MNT_PT="/u/pictures"
    [ -d ${MNT_PT} ] || {
        echo "Cannot locate mount point for images"
        exit 1
    }
}
PMM="${MNT_PT}/MagicMirror"

for orient in landscape portrait
do
  MOD_DIR="${PMM}/${orient}"
  [ -d ${MOD_DIR} ] || continue
  cd ${MOD_DIR}

  for folder in *
  do
    case $folder in
        Artists | Artists-ALL | JAV | JAV-ALL | Models | Models-ALL | Photographers | Photographers-ALL | Playboy-ALL)
            continue
            ;;
        *)
            if [ "${orient}" == "landscape" ]
            then
              updtop -l "$folder"
            else
              updtop "$folder"
            fi
            ;;
    esac
  done
done
