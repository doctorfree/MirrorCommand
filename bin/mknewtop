#!/bin/bash

UPDSCRIPT="updtop"

TYPEDIR="/mnt/transcend/Pictures/MagicMirror"
PICDIR="/usr/local/MirrorCommandLine/pics"

[ -d ${PICDIR} ] || sudo mkdir -p ${PICDIR}
[ -d ${TYPEDIR} ] || {
    echo "$TYPEDIR does not exist or is not a directory. Exiting."
    exit 1
}
cd ${TYPEDIR}
for i in $*
do
    [ -d $i ] && {
        echo "$i exists. skipping."
        continue
    }
    sudo mkdir $i
    ${UPDSCRIPT} $i
    [ -d ${PICDIR}/$i ] || {
        cd ${PICDIR}
        sudo ln -s ${TYPEDIR}/$i .
        cd ${TYPEDIR}
    }
done
