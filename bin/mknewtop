#!/bin/bash

UPDSCRIPT="updtop"

TYPEDIR="/mnt/transcend/Pictures/MagicMirror"
PICDIR="/usr/local/MirrorCommandLine/pics"

[ -d ${PICDIR} ] || mkdir -p ${PICDIR}
[ -d ${TYPEDIR} ] || {
    TYPEDIR="/u/pictures/MagicMirror"
    [ -d ${TYPEDIR} ] || {
        echo "$TYPEDIR does not exist or is not a directory. Exiting."
        exit 1
    }
}

portrait=
[ "$1" == "-l" ] && {
    portrait="-l"
    shift
}

cd ${TYPEDIR}
for i in $*
do
    [ -d $i ] && {
        echo "$i exists. skipping."
        continue
    }
    mkdir $i
    ${UPDSCRIPT} ${portrait} $i
    [ -d ${PICDIR}/$i ] || {
        cd ${PICDIR}
        ln -s ${TYPEDIR}/$i .
        cd ${TYPEDIR}
    }
done
